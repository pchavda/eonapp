@model eonapp.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="row">
    <form asp-action="Create" class="center-block">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
            <br />

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Gender"></label>
                </div>
                <div class="col-sm-3">
                    @foreach (var gender in Model.Genders)
                    {
                        <input type="radio" asp-for="Gender" value="@gender.Key" /> @gender.Value<br />
                    }
                </div>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="DateRegistered">Date Registered</label>
                </div>
                <div class="col-sm-3">
                    <input type="date" asp-for="DateRegistered" />
                </div>
            </div>
            <span asp-validation-for="DateRegistered" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Days">Select Days</label>
                </div>
                <div class="col-sm-3">
                    @foreach (var day in Model.DayStrings)
                    {
                        <input type="checkbox" name="SelectedDays"  value="@day" /> @day<br />
                    }
                </div>
            </div>
            <span asp-validation-for="SelectedDays" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Request">Additional Request</label>
                </div>
                <div class="col-sm-3">
                  
                    <textarea asp-for="Request"  rows="5" cols="40"></textarea>
                  
                </div>
            </div>
            <span asp-validation-for="Request" class="text-danger"></span>
            <br />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            <a asp-action="getusers" asp-controller="user" class="btn btn-sm btn-default">Back to List</a>
        </div>
    </form>
</div>
